<% if !signed_in? and @pagehelper_active == "Main"%>
  <form class="navbar-form navbar-right" id="signin-form" >
    <div class="form-group">
      <input id="email-field" type="email" class="form-control" placeholder="Email">
      <input id="password-field" type="password" class="form-control" placeholder="Password">
    </div>
    <button id="signup" type="button" class="btn btn-default btn-sm">SignUp</button>
    <button id="signin" type="button" class="btn btn-default btn-sm">LogIn</button>
  </form>
<% elsif signed_in? %>
  <p class="navbar-text navbar-right">Signed in as
    <%= current_user.email %>
    <%= link_to "My Routes", current_user, type: "button", class: "btn btn-link btn-sm" %>
    <%= link_to "Settings", edit_user_path(current_user), type: "button", class: "btn btn-link btn-sm" %>
    <%= link_to "Log Out", signout_path, method: :delete, type: "button", class: "btn btn-link btn-sm" %>
  </p>
<% end %>