<div class="container">
  <div class="row">

    <div class="col-md-4 sidebar">
      <div class="row">

        <h4 class="col-md-12">Your Saved Routes</h4>

        <div id="savedroutes-ins" class="col-md-12">
          <h3>Instructions</h3>
          <div>
            <p>Click to view.</p>
            <%= link_to "Delete All Routes", remove_all_routes_user_path(current_user), type: 'button', class: 'btn btn-warning' %>
          </div>
        </div>

        <div id="savedroutes-acc" class="col-md-12">
          <% @routes.each_with_index do |r, i| %>
            <div class="route-panel">

              <h3 class="route-title"> <%= "Route "+i.to_s %> </h3>

              <div class="route-content">
                <p>
                  <%= "Name: " + r.name %><br>
                  <%= "Mode: " + r.mode %><br>
                  <% r.steps.each_with_index do |s, i| %>
                    <%= "=== Location No. " + i.to_s + "===" %>
                    <%= "Geocode: " + s.geocode %><br>
                    <%= "departure: " + s.departure.to_s %><br>
                    <%= "arrival: " + s.arrival.inspect %><br>
                  <% end %>
                </p>
                <%= link_to "Display", '#', type: 'button', class: 'btn btn-info' %>
                <%= link_to "Delete", r, method: :delete, type: 'button', class: 'btn btn-warning' %>
              </div>

            </div>
          <% end %>
        </div>
        
      </div>
      <hr>
      <%= link_to "Return", root_path, type: 'button', class: 'btn btn-warning' %>
    </div>

    <%= render 'shared/google_map' %>

  </div>

</div>